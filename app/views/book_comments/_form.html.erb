<%= form_with(model:[book, book_comment], url: book_book_comments_path(@book), remote: true) do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, rows:'5',placeholder: "コメントを入力してください", class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.submit "送信" %>
  </div>
<% end %>